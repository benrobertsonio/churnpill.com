---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const authors = await getCollection('authors');
const sortedAuthors = authors.sort((a, b) => {
  // featured authors first, then alphabetical
  if (a.data.featured && !b.data.featured) return -1;
  if (!a.data.featured && b.data.featured) return 1;
  return a.data.name.localeCompare(b.data.name);
});

// get blog posts to show article counts per author
const allPosts = await getCollection('blog');
const authorPostCounts = authors.reduce((acc, author) => {
  const count = allPosts.filter(post => post.data.author === author.slug).length;
  acc[author.slug] = count;
  return acc;
}, {} as Record<string, number>);

// structured data
const organizationData = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "ChurnPill",
  "url": "https://churnpill.com",
  "logo": "https://churnpill.com/logo.png",
  "description": "Storage optimization and disk management solutions"
};

const breadcrumbData = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://churnpill.com"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Blog",
      "item": "https://churnpill.com/blog"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": "Authors",
      "item": "https://churnpill.com/blog/authors"
    }
  ]
};
---

<Layout 
  title="Authors - ChurnPill Blog" 
  description="Meet the experts behind ChurnPill's insights on SaaS growth, customer retention, and business optimization. Industry leaders sharing actionable strategies."
>
  <div class="min-h-screen bg-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 py-24">
      <!-- Breadcrumb -->
      <nav class="mb-16">
        <ol class="flex items-center space-x-2 text-sm text-gray-500">
          <li><a href="/" class="hover:text-gray-700 transition-colors">Home</a></li>
          <li class="text-gray-300">/</li>
          <li><a href="/blog" class="hover:text-gray-700 transition-colors">Blog</a></li>
          <li class="text-gray-300">/</li>
          <li class="text-gray-900">Authors</li>
        </ol>
      </nav>

      <!-- Header -->
      <div class="max-w-4xl mx-auto text-center mb-24">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-gambarino font-bold mb-8 leading-tight tracking-tight text-gray-900">
          Our Authors
        </h1>
        <p class="text-xl md:text-2xl leading-relaxed text-gray-600 max-w-3xl mx-auto">
          Industry experts and thought leaders sharing insights on SaaS growth, customer retention, and business optimization.
        </p>
      </div>

      <!-- Featured Authors -->
      {sortedAuthors.some(author => author.data.featured) && (
        <div class="mb-24">
          <h2 class="text-2xl font-gambarino font-semibold text-gray-900 mb-12 text-center">Featured Authors</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-12 max-w-4xl mx-auto">
            {sortedAuthors
              .filter(author => author.data.featured)
              .map((author) => (
                <div class="group text-center">
                  <a href={`/blog/author/${author.slug}`} class="block">
                    <img 
                      src={author.data.avatar || '/avatars/default.jpg'} 
                      alt={author.data.name}
                      class="w-32 h-32 rounded-full mx-auto mb-6 shadow-lg group-hover:shadow-xl transition-shadow"
                      onerror="this.src='data:image/svg+xml;base64,'"
                    />
                    <h3 class="text-2xl font-gambarino font-semibold text-gray-900 mb-3 group-hover:text-gray-600 transition-colors">
                      {author.data.name}
                    </h3>
                  </a>
                  {author.data.title && author.data.company && (
                    <p class="text-lg text-gray-600 mb-4">
                      {author.data.title} at {author.data.company}
                    </p>
                  )}
                  <p class="text-gray-600 leading-relaxed mb-6 max-w-md mx-auto">
                    {author.data.bio}
                  </p>
                  <div class="flex items-center justify-center space-x-6 text-sm text-gray-500 mb-6">
                    <div>
                      <span class="font-semibold text-gray-900">{authorPostCounts[author.slug] || 0}</span> article{(authorPostCounts[author.slug] || 0) !== 1 ? 's' : ''}
                    </div>
                    {author.data.location && (
                      <div>üìç {author.data.location}</div>
                    )}
                  </div>
                  
                  {/* Social Links */}
                  {(author.data.twitter || author.data.linkedin || author.data.github || author.data.website) && (
                    <div class="flex justify-center space-x-4">
                      {author.data.twitter && (
                        <a 
                          href={`https://twitter.com/${author.data.twitter}`} 
                          class="text-gray-400 hover:text-gray-600 transition-colors"
                          rel="noopener noreferrer"
                          target="_blank"
                        >
                          <span class="sr-only">Twitter</span>
                          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                          </svg>
                        </a>
                      )}
                      {author.data.linkedin && (
                        <a 
                          href={`https://linkedin.com/in/${author.data.linkedin}`} 
                          class="text-gray-400 hover:text-gray-600 transition-colors"
                          rel="noopener noreferrer"
                          target="_blank"
                        >
                          <span class="sr-only">LinkedIn</span>
                          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                          </svg>
                        </a>
                      )}
                      {author.data.github && (
                        <a 
                          href={`https://github.com/${author.data.github}`} 
                          class="text-gray-400 hover:text-gray-600 transition-colors"
                          rel="noopener noreferrer"
                          target="_blank"
                        >
                          <span class="sr-only">GitHub</span>
                          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                          </svg>
                        </a>
                      )}
                      {author.data.website && (
                        <a 
                          href={author.data.website} 
                          class="text-gray-400 hover:text-gray-600 transition-colors"
                          rel="noopener noreferrer"
                          target="_blank"
                        >
                          <span class="sr-only">Website</span>
                          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9m0 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
                          </svg>
                        </a>
                      )}
                    </div>
                  )}
                </div>
              ))}
          </div>
        </div>
      )}

      <!-- All Authors -->
      {sortedAuthors.some(author => !author.data.featured) && (
        <div class="border-t border-gray-200 pt-16">
          <h2 class="text-2xl font-gambarino font-semibold text-gray-900 mb-12 text-center">All Authors</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {sortedAuthors
              .filter(author => !author.data.featured)
              .map((author) => (
                <div class="group text-center">
                  <a href={`/blog/author/${author.slug}`} class="block">
                    <img 
                      src={author.data.avatar || '/avatars/default.jpg'} 
                      alt={author.data.name}
                      class="w-20 h-20 rounded-full mx-auto mb-4 shadow group-hover:shadow-lg transition-shadow"
                      onerror="this.src='data:image/svg+xml;base64,'"
                    />
                    <h3 class="text-lg font-gambarino font-semibold text-gray-900 mb-2 group-hover:text-gray-600 transition-colors">
                      {author.data.name}
                    </h3>
                  </a>
                  {author.data.title && author.data.company && (
                    <p class="text-sm text-gray-600 mb-3">
                      {author.data.title} at {author.data.company}
                    </p>
                  )}
                  <p class="text-gray-600 leading-relaxed text-sm mb-3">
                    {author.data.bio}
                  </p>
                  <p class="text-xs text-gray-500">
                    {authorPostCounts[author.slug] || 0} article{(authorPostCounts[author.slug] || 0) !== 1 ? 's' : ''}
                  </p>
                </div>
              ))}
          </div>
        </div>
      )}

      {/* Show message if no authors */}
      {sortedAuthors.length === 0 && (
        <div class="text-center py-24">
          <h2 class="text-2xl font-gambarino font-semibold text-gray-900 mb-4">
            No authors yet
          </h2>
          <p class="text-xl text-gray-600">
            Check back soon for expert contributors and thought leaders.
          </p>
        </div>
      )}
    </div>
  </div>

  <!-- Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(organizationData)} />
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbData)} />
</Layout>
