---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { SITE_NAME, SITE_DESCRIPTION, SITE_LOGO, SOCIAL_LINKS } from '../../config/site';

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const organizationData = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": SITE_NAME,
  "url": Astro.site,
  "logo": `${Astro.site}${SITE_LOGO}`,
  "description": SITE_DESCRIPTION,
  "sameAs": [
    SOCIAL_LINKS.twitter,
    SOCIAL_LINKS.linkedin
  ]
};
---

<Layout title={`Blog - ${SITE_NAME}`} description="Insights, tips, and strategies for optimizing your storage infrastructure and improving system performance.">
  <div class="min-h-screen bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 pt-36">
      <!-- Header -->
      <div class="text-center mb-20">
        <h1 class="heading-accent mb-6">
          The {SITE_NAME} Blog
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
          Insights, tips, and strategies for optimizing your SaaS and improving retention.
        </p>
      </div>

      <!-- Blog Posts -->
      <div class="max-w-4xl mx-auto space-y-16">
        {sortedPosts.map((post) => (
          <article class="group">
            <a href={`/blog/${post.slug}`} class="block">
              <!-- Header -->
              <div class="flex items-center mb-6">
                <img 
                  src={post.data.author.avatar || '/avatars/default.jpg'} 
                  alt={post.data.author.name}
                  class="w-12 h-12 rounded-full mr-4"
                  onerror="this.src='data:image/svg+xml;base64,'"
                />
                <div>
                  <p class="font-medium text-gray-900 text-sm">{post.data.author.name}</p>
                  <p class="text-gray-500 text-sm">
                    {post.data.pubDate.toLocaleDateString('en-US', { 
                      month: 'long', 
                      day: 'numeric', 
                      year: 'numeric' 
                    })}
                  </p>
                </div>
              </div>

              <!-- Title -->
              <h2 class="font-gambarino text-3xl font-semibold text-gray-900 mb-4 group-hover:text-slate-600 transition-colors leading-tight">
                {post.data.title}
              </h2>
              
              <!-- Description -->
              <p class="text-gray-600 text-lg leading-relaxed mb-6 line-clamp-3">
                {post.data.description}
              </p>
              
              <!-- Footer -->
              <div class="flex items-center justify-between pt-4 border-t border-gray-100">
                <div class="flex flex-wrap gap-2">
                  {post.data.tags.slice(0, 3).map((tag: string) => (
                    <span class="inline-block bg-gray-50 text-gray-700 text-sm px-3 py-1 rounded-full font-medium">
                      {tag}
                    </span>
                  ))}
                </div>
                <div class="flex items-center text-gray-500">
                  {post.data.readTime && (
                    <span class="text-sm font-medium">{post.data.readTime}</span>
                  )}
                  <svg class="ml-2 w-4 h-4 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
              </div>
            </a>
          </article>
        ))}
      </div>
    </div>
  </div>

  <script type="application/ld+json" set:html={JSON.stringify(organizationData)} />
</Layout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
