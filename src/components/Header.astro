            </svg>
          </button>
          
          <!-- Product dropdown -->
          <div 
            id="product-dropdown"
            class="absolute left-1/2 z-10 mt-5 flex w-screen max-w-md -translate-x-1/2 px-3 opacity-0 invisible transition-all duration-200 ease-out"
          >
            <div class="w-full max-w-md overflow-hidden rounded-3xl bg-white shadow-lg ring-1 ring-gray-900/5 dark:bg-gray-800 dark:ring-white/10">
              <div class="p-4">
                {navigation.product.items.map((item) => (
                  <div class="group relative flex items-center gap-x-6 rounded-lg p-4 text-sm/6 hover:bg-gray-50 dark:hover:bg-white/5">
                    <div class="flex size-11 flex-none items-center justify-center rounded-lg bg-gray-50 group-hover:bg-white dark:bg-gray-700/50 dark:group-hover:bg-gray-700">
                      <Fragment set:html={item.icon.replace('group-hover:text-indigo-600', 'group-hover:text-primary-600')} />
                    </div>
                    <div class="flex-auto">
                      <a href={item.href} class="block font-semibold text-gray-900 dark:text-white">
                        {item.name}
                        <span class="absolute inset-0"></span>
                      </a>
                      <p class="mt-1 text-gray-600 dark:text-gray-400">{item.description}</p>
                    </div>
                  </div>
                ))}
              </div>
              <div class="grid grid-cols-2 divide-x divide-gray-900/5 bg-gray-50 dark:divide-white/10 dark:bg-gray-700/50">
                {navigation.product.actions.map((action) => (
                  <a href={action.href} class="flex items-center justify-center gap-x-2.5 p-3 text-sm/6 font-semibold text-gray-900 hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700/50">
                    <Fragment set:html={action.icon} />
                    {action.name}
                  </a>
                ))}
              </div>
            </div>
          </div>
        </div>
      )}
      
      {navigation.links.map((link) => (
        <a href={link.href} class="text-sm/6 font-semibold text-gray-900 dark:text-white hover:text-primary-600 dark:hover:text-primary-400">
          {link.name}
        </a>
      ))}
    </div>
    
    <div class="hidden lg:flex lg:flex-1 lg:justify-end">
      <a href={cta.href} class="text-sm/6 font-semibold text-gray-900 dark:text-white hover:text-primary-600 dark:hover:text-primary-400">
        {cta.text} <span aria-hidden="true">&rarr;</span>
      </a>
    </div>
  </nav>
  
  <!-- Mobile menu -->
